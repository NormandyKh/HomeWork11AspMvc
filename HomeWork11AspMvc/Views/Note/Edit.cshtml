@model HomeWork11AspMvc.Models.Note

<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Edit Note's'</h2>
    </div>

    <form method="post" asp-action="Edit">
        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Title">Note Title</label>
                <input type="text" class="form-control mb-3" asp-for="Title" placeholder="Enter Title" required>
                <span asp-validation-for="Title" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="NoteText">Note Text</label>
                <input type="text" class="form-control mb-3" asp-for="NoteText" placeholder="Enter Note Text">
                <span asp-validation-for="NoteText" class=" alert-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Tag">Tag</label>
                <input type="text" class="form-control mb-3" asp-for="Tag" placeholder="Enter Tag">
                <span asp-validation-for="Tag" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6 mb-3">
                <label asp-for="CreatedAt">Created At</label>
                <input type="datetime-local" class="form-control" asp-for="CreatedAt">
                <span asp-validation-for="CreatedAt" class=" alert-danger"></span>
            </div>
        </div>


        <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Update</button>
        <a asp-controller="Note" asp-action="Index" class="btn btn-lg btn-warning p-2">Back To List</a>
    </form>

</div>


@*//for front end validations*@

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}